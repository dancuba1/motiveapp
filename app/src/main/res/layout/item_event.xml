<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/eventBackgroundCard"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleTextView"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@+id/startTimeTextView"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="25dp"
            android:paddingBottom="8dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/deleteEventBtn"
            android:ellipsize="end"
            android:layout_toEndOf="@id/locationImage"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationImage"
            android:paddingStart="15dp"
            android:src="@drawable/location_symbol"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/locationTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:paddingStart="20dp"
            android:paddingEnd="40dp"
            android:id="@+id/descriptionTextView"
            android:text="@string/description"
            android:textColor="@color/black"
            android:layout_below="@id/locationTextView"
            android:layout_marginStart="5dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/startTimeTextView"
            android:text="0:00"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingEnd="12dp"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteEventBtn"
            android:src="@drawable/bin"
            android:layout_alignBottom="@id/endTimeTextView"
            android:paddingEnd="20dp"
            android:layout_toLeftOf="@id/endTimeTextView"
            />

        <TextView
            android:id="@+id/endTimeTextView"
            android:text="2:00"
            android:textColor="@color/black"
            android:layout_below="@id/startTimeTextView"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:textSize="12sp"/>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>









<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_weight="1.3"
        android:layout_marginTop="-8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:id="@+id/header">
        <ImageView
            android:id="@+id/motiveLogo"
            android:layout_width="250dp"
            android:adjustViewBounds="true"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/motive_logo_4"/>
    </com.google.android.material.card.MaterialCardView>






    <com.google.android.material.card.MaterialCardView
        android:layout_weight="1"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:text="Discover"
                android:shadowColor="#8d8d8d"
                android:shadowDx="0"
                android:shadowDy="7"
                android:shadowRadius="10"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:elevation="20dp"
                android:id="@+id/discoverButton"
                android:layout_height="match_parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:elevation="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Following"
                android:id="@+id/followingHomeButton"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noFollowingTextView"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="You are not following anyone."/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:layout_marginVertical="30dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="9"
        android:visibility="invisible"
        android:id="@+id/homeEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/mainSearchCard"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropdown"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:layout_alignBottom="@id/searchView"/>


            <SearchView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                android:layout_marginEnd="30dp"
                android:id="@+id/searchView"
                android:layout_alignParentTop="true"/>
            <com.google.android.material.textview.MaterialTextView
                android:padding="5dp"
                android:layout_below="@id/searchView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minPriceTV"
                android:labelFor="@id/minPriceSlider"
                android:text="Minimum Price:"/>

            <com.google.android.material.textview.MaterialTextView
                android:padding="5dp"
                android:layout_below="@id/searchView"
                android:id="@+id/maxPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_marginEnd="80dp"
                android:layout_toEndOf="@id/minPriceTV"
                android:labelFor="@id/maxPriceSlider"
                android:text="Maximum Price:" />
            <LinearLayout
                android:layout_below="@id/maxPriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:id="@+id/priceSliderLayout"
                android:orientation="horizontal">
                <com.google.android.material.slider.Slider
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/minPriceSlider"/>
                <com.google.android.material.slider.Slider
                    android:layout_weight="1"
                    android:valueFrom="5"
                    android:valueTo="300"
                    android:value="300"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/maxPriceSlider"/>
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceSliderLayout"
                android:visibility="gone"
                android:id="@+id/locationDistanceSlider"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:id="@+id/createDatePicker"
                android:layout_below="@id/priceSliderLayout"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                TagsEditText:icon="@drawable/ic_add"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_below="@id/createDatePicker"/>

            <mabbas007.tagsedittext.TagsEditText
                android:layout_width="match_parent"
                android:layout_below="@id/dateTextView"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/searchTags"
                android:hint="Enter tags for searching"
                TagsEditText:allowSpaceInTag="true"
                TagsEditText:tagsCloseImageRight="@drawable/tag_close"
                TagsEditText:tagsBackground="@drawable/square"
                TagsEditText:tagsCloseImageLeft="@drawable/dot"
                TagsEditText:tagsTextColor="@color/black"
                TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize"
                TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchButton"
                android:elevation="10dp"
                android:layout_below="@id/eventGenreSpinnerSearch"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="80dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Advanced Search"
                TagsEditText:icon="@drawable/search"/>
            <Spinner
                android:id="@+id/eventGenreSpinnerSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/event_genres_any"
                android:layout_below="@id/eventGenreLabel"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="70dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:id="@+id/eventGenreLabel"
                android:layout_below="@id/searchTags"
                android:text="Event Genre:"
                android:layout_marginTop="20dp"/>





            

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/noEventsTV"
        android:layout_below="@id/mainSearchCard"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_events_found"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchEventsRV"
        android:layout_below="@id/noEventsTV"
        android:padding="10dp"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startUpTV"
        android:layout_below="@id/mainSearchCard"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginHorizontal="40dp"
        android:text="Text search for events, or press down arrow for advanced search"/>


</RelativeLayout>